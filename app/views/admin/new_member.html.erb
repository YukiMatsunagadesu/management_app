<header class="admin_header">
  <div class="header_message">
  お帰りなさい社員No.1 あかさたなさん
  </div>
  <div class="header_list">
    <ul>
      <li><%=link_to('home','/admin')%></li>
      <li><%=link_to('今日のメンバー','/admin/today')%></li>
      <li><%=link_to('従業員一覧','/admin/employeelist')%></li>
      <li><%=link_to('勤怠管理','/admin/management')%></li>
      <li><%=link_to('勤務カレンダー','/admin/schedule')%></li>
      <li><%=link_to('シフト申請一覧','/admin/application')%></li>
      <li><%=link_to('その他申請一覧','/admin/other_application')%></li>
    </ul>
  </div>
</header>
<main>
  <div class="new_member_container">
    <div class="flash_message">
      <% if flash[:alert] %>
        <%= flash[:alert] %>
      <% end %>
    </div>
    <div class="new_member_content">
      <p>新しいメンバーを追加します</p>
      <%= form_tag("/admin/member_create") do%>
        <div class="new_member_form_content">
          名前<input type="text" name="name">
          雇用形態<input type="text" name="member_type">
          メールアドレス<input type="text" name="mail">
          電話番号<input type="text" name="phone">
          パスワード<input type="text" name="password">
          <input type="submit" class="new_member_form_content_submit">
        </div>
      <% end %>
    </div>
  </div>
</main>
