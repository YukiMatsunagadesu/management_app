<header class="admin_header">
  <div class="header_message">
  お帰りなさい社員No.1 あかさたなさん
  </div>
  <div class="header_list">
    <ul>
      <li><%=link_to('home','/admin')%></li>
      <li><%=link_to('今日のメンバー','/admin/today')%></li>
      <li><%=link_to('従業員一覧','/admin/employeelist')%></li>
      <li><%=link_to('勤怠管理','/admin/management')%></li>
      <li><%=link_to('勤務カレンダー','/admin/schedule')%></li>
      <li><%=link_to('シフト申請一覧','/admin/application')%></li>
      <li><%=link_to('その他申請一覧','/admin/other_application')%></li>
    </ul>
  </div>
</header>
<div class="employeelist_edit_page_name">『<%= @member.id %>』さんのメンバー情報を編集します</div>
<div class="employeelist_edit_container">
    <div class="member_edit_flash">
      <% if flash[:alert] %>
        <%= flash[:alert] %>
      <% end %>
    </div>
    <div class="employeelist_edit_content">
        <%=form_tag("/admin/#{@member.id}/employeelist_update") do%>
         <div class="form">
            <div class="title">
              <div>名前</div>
              <div>メールアドレス</div>
              <div>電話番号</div>
              <div>雇用形態</div>
            </div>    
            <div class="content">
              <div><input type="text" value="<%= @member.name %>" name="name"> </div>
              <div><input type="text" value="<%= @member.mail %>" name="mail"></div>
              <div><input type="text" value="<%= @member.phone %>" name="phone"></div>
              <div><input type="text" value="<%= @member.member_type %>" name="member_type"></div>
            </div>
          </div>
            <input type="submit" class="submit">
        <%end%>
    </div>
</div>