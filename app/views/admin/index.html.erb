<header class="admin_header">
  <div class="header_message">
     お帰りなさい社員No.<%=@current_member.id%> <%=@current_member.name%>さん 
    <div class="admin_logout"><%=link_to("ログアウト","/",{method: "post"})%></div>
  </div>
  
  <div class="header_list">
    <ul>
      <li><%=link_to('home','/admin')%></li>
      <li><%=link_to('今日のメンバー','/admin/today')%></li>
      <li><%=link_to('従業員一覧','/admin/employeelist')%></li>
      <li><%=link_to('勤怠管理','/admin/management')%></li>
      <li><%=link_to('勤務カレンダー','/admin/schedule')%></li>
     <!--
      <li><%=link_to('シフト申請一覧','/admin/application')%></li> 
      <li><%=link_to('その他申請一覧','/admin/other_application')%></li>%>
      -->
    </ul>
  </div>
</header>
<main>
    <div class="admin_content">
      <div class="admin_today">
        <%= (Time.now + 9.hours).strftime('%Y-%m-%d %H:%M') %>
      </div>
      <div class="message">
      今日も一日頑張りましょう!
      </div>
    </div>
</main>
<footer>
    <div class="notice">
      <% @members.each do |member| %>
        <% if member.attendances.present? && member.attendances.last.start_time.present? && !member.attendances.last.end_time.present? %>
          <div>社員No.<%=member.id%> 「<%= member.name %>」さんの退勤処理が未処理です</div>
        <% end %>
      <% end %>
      </div>
</footer>
